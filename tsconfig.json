{
  "compilerOptions": {
    "target": "ES2020",                      // Usa funzionalità moderne ma supportate
    "module": "CommonJS",                    // Per compatibilità con Node.js
    "rootDir": "./src",                      // Origine del codice TypeScript
    "outDir": "./dist",                      // Output compilato
    "strict": true,                          // Attiva tutti i controlli di tipo
    "typeRoots": ["./node_modules/@types", "./src/types"], // Includi tipi globali
    "esModuleInterop": true,                 // Permette import default da moduli CommonJS
    "moduleResolution": "node",              // Risoluzione in stile Node
    "skipLibCheck": true,                    // Salta controlli nei file .d.ts
    "forceConsistentCasingInFileNames": true // Aiuta con problemi su filesystem case-sensitive
  },
  "include": ["src", "src/types"],           // Includi cartelle `src` e `src/types`
  "exclude": ["node_modules", "dist"]        // Escludi la build e le dipendenze
}
